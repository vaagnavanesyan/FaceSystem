@model Faces.WebMvc.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <h4>OrderViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageString)
        </dt>
        <dd class="col-sm-10">
            <img src="@(Model.ImageString)" alt="order-image" class="order-image" />
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>OrderDetailId</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.OrderDetailId</td>
                    <td><img src="@detail.ImageString" class="order-preview"/></td>
                </tr>
            }
        </tbody>
    </table>
</div>

